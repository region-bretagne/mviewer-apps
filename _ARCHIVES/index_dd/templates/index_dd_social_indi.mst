{{#features}}
	<li class="item" id="{{feature_ol_uid}}">
		<!-- NameDim-->
		<div class="name-dim-soc">
			<h4>- Dimension sociale -</h4>			
		</div>
		<!-- ./NameDim-->
		<!-- SelectFeature-->
		<div class="select-feature">
			<h3><span class="glyphicon glyphicon-map-marker" aria-hidden="true"><span class="TitleFeature"> {{nom_geo}}</span></h3>
		</div>	
		<!-- ./SelectFeature-->

		<!-- Categorie-->
        <div id="idCategory">
          <div class="panel panel-default">
            <div class="panel-body">
                <div class="category-dim">         
                    <h4 class="Title"><B>Comment se positionne le territoire ?</B></h4>
	                <div class="iconCat" style="margin:20px;">
	                    <img src="apps/region/index_dd/img/social_cat_{{categorie_i}}.svg" style="width: 280px;">
	                </div>
	                <div class="textCat">
	                    <h4 class="NameCatSoci" id="name-cat-{{categorie_i}}"></h4>
	                    <p class="SubTextJustify" id="cat-{{categorie_i}}"></p>
	                </div>               
                </div>
            </div>
          </div>
        </div>
        <!-- ./Categorie-->

        <!-- ChartRadar-->
        <div id="idChart">
          <div class="panel panel-default">
            <div class="panel-body">
              <h4 class="Title"><b>Quelle est la répartition des indicateurs ?</b></h4>
              <canvas class="chart" id="RadarChartSociI" data-codegeo="{{code_geo}}" data-i1="{{i1_ind}}" data-i2="{{i2_ind}}" data-i3="{{i3_ind}}" width="220" height="188"></canvas> 
              <p class="ChartLabel">
              	Indicateur 1: Taux d'élèves du 1er degré en classe bilingue de breton </br>Indicateur 2: Taux d'élèves du 2nd degré en classe bilingue de breton </br>Indicateur 3: Part de la population (15ans et +) suivant des cours du soir de breton
              </p> 
              <!--<p class="SubText">
              	Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.Lorem ipsum dolor sit amet, consectetur adipiscing elit.-->
              </p>            
            </div>
          </div>
        </div> 
        <!-- /.ChartRadar--> 

	</li>
{{/features}}

<style>
	.panel-body{
		padding:10px;
	}
	.panel-default{
		border-radius: 2px;
    	box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.1);
