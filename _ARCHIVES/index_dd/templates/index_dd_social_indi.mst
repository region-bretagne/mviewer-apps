	}
	.name-dim-soc{
		background-color: #3db39e;
    	padding: 1px;
    	text-align: center;
    	text-transform: uppercase;
	}
	.name-dim-soc h4{
		color: white;
		font-size: 14px;
		font-family:"roboto_bold";
		letter-spacing: 1px;
	}
	.select-feature{
		color: #2D4059;
		font-size:18px;
		margin-bottom: 10px;
    	margin-top: 10px;
    	text-align:center;
	}
	.TitleFeature {
		color: #2D4059;
		font-family:"roboto_bold";
		font-size:20px;
		margin-bottom:1%;
		line-height:1;
		text-transform:uppercase;
	}
	.Title{
	  text-align: center;
	  font-size: 18px;
	  margin-top: 10.5px;
      margin-bottom: 10.5px;
      color: #2D4059;
      font-family: Roboto,"Helvetica Neue",Helvetica,Arial,sans-serif;
      font-weight: 400;
      line-height: 1.1;
	}
	.ChartLabel{
	  text-align: left;
	  font-size: 12px;
      color: #555;
	}
	.SubText{
	  text-align: center;
	  font-size: 13px;
      color: #555;
	}
	.SubTextJustify{
	  text-align: justify;
	  font-size: 13px;
      color: #555;
	}
	.iconCat{
		text-align: center;
	}
	.NameCatSoci{
		color:#3DB39E;
		font-family: Roboto,"Helvetica Neue",Helvetica,Arial,sans-serif;
		text-align: center;		
      	font-weight: 500;
      	margin: 5px 0px 5px 0px;
	}
	#name-cat-A:after{
		content:"Territoires équilibrés";
	}
	#name-cat-B:after{
		content:"Territoires intermédiaires";
	}
	#name-cat-C:after{
		content:"Territoires fragiles";
	}
	#cat-A:after{
		content:"Les territoires équilibrés représentent les territoires affichant l'indice le plus élevé: dans le classement des EPCI bretons, le territoire fait partie de la première partie de tableau (dans les 15 premiers).";
	}
	#cat-B:after{
		content:"Les territoires intermédiaires représentent les territoires avec un indice moyen: dans le classement des EPCI bretons, le territoire est compris entre la 16ème et la 45ème place.";
	}
	#cat-C:after{
		content:"Les territoires fragiles représentent les territoires avec un indice faible: dans le classement des EPCI bretons, le territoire fait partie de la dernière partie de tableau (de la 46 à la 59ème place).";
	}
	.chart{
		margin-bottom:15px;
	}
	#idChart{
		margin-bottom:100px;
	}

</style>
   

<script>
    var indicateur_i = {};
	indicateur_i.getData = function () {
		var code_geo = $("#RadarChartSociI").attr("data-codegeo");
		var data = {chart_social_i: {labels:["Indicateur 1","Indicateur 2","Indicateur 3"], data: {datasets:[[parseFloat($("#RadarChartSociI").attr("data-i1")),parseFloat($("#RadarChartSociI").attr("data-i2")),parseFloat($("#RadarChartSociI").attr("data-i3"))]]}}};
		 console.log(data);
		 //drawChart(data);

		$.getJSON( "../ws/index_dd/data_social_template.php", function(data2) {
	                    console.log(data2);
	                    indicateur_i.drawChart(data, data2);	       
	    });
	}; 



	indicateur_i.drawChart = function (data, data2) {
	var ctx = document.getElementById("RadarChartSociI");
    var RadarChartSociI = new Chart(ctx, {
          type: 'radar',
          data: {
              labels: data.chart_social_i.labels,
              datasets: [{
                  label: "Moyenne des territoires",
                  backgroundColor: "rgba(45, 64, 89, 0)",
                  borderColor: "rgba(45, 64, 89, 1)",
                  pointBackgroundColor: "rgba(45, 64, 89, 1)",
                  pointBorderColor: "rgba(45, 64, 89, 1)",
                  pointHoverBackgroundColor: "#fff",
                  pointHoverBorderColor: "rgba(45, 90, 89, 1)",
                  data: data2.data_avg_i
              },
              {                  
                  label: "EPCI",
                  backgroundColor: "rgba(61, 179, 158, 0.7)",
                  borderColor: "rgba(61, 179, 158, 1)",
                  pointBackgroundColor: "rgba(61, 179, 158, 1)",
                  pointBorderColor: "rgba(61, 179, 158, 1)",
                  pointHoverBackgroundColor: "#fff",
                  pointHoverBorderColor: "rgba(61, 179, 158, 1)",
                  data: data.chart_social_i.data.datasets[0]
              }]
          },
          options: {
            scale: {
                ticks: {
                    beginAtZero: true,
                    max:1,
                    stepSize:0.2
                },
                pointLabels:{
                	fontSize:10
                }
            },
            responsive: true,
          	tooltips: {
              callbacks: {
                  label: function(tooltipItem, data) {
                      return data.datasets[tooltipItem.datasetIndex].label +': ' + parseFloat(tooltipItem.yLabel.toFixed(2)).toLocaleString();
                  }
              }
          	}
          }
      });
    };  

    if  (typeof Chart === 'function') {
			indicateur_i.getData();
	} else {
			$.get('https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js', function() {
				indicateur_i.getData();
    		
			}); 
	}


</script>