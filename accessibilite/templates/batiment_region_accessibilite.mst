{{#features}}
	<li class="item" id="{{feature_ol_uid}}">
		<h2 class="rb-title-feature">{{libelle_bat}}</h2>
		<p class="rb-text-feature">		
			<span style="font-weight:bold"> Fonction :</span> {{fonction_principale}}<br/>
			{{#surface_adt}}
			<span style="font-weight:bold"> Surface :</span> {{surface_adt}} m²<br/>
			{{/surface_adt}}
		</p>
		<h3 class="rb-subtitle-feature">Niveau d'accessibilité selon le handicap</h3>
		<div class="pictos">
			<div class="floating-box auditif {{classe_h_aud}}"><span class="tooltiptext">{{classe_h_aud}}</span></div>
			<div class="floating-box cognitif {{classe_h_cog}}"><span class="tooltiptext">{{classe_h_cog}}</span></div>
			<div class="floating-box pmr {{classe_h_mot}}"><span class="tooltiptext">{{classe_h_mot}}</span></div>
			<div class="floating-box visuel {{classe_h_vis}}"><span class="tooltiptext">{{classe_h_vis}}</span></div>
        </div>
	</li>
{{/features}}

<style>
.pictos {
    padding-left: 20px;
}
.floating-box {
    float: left;
	left: 50px;    
    margin: 5px; 
	width: 30px;
    height: 30px;       
}

