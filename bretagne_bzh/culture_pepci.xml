            </layer>
            <layer id="aide_images_industrie_creation" name="Soutiens dédiés au cinéma et audiovisuel" visible="true" tiled="false" namespace="rb"
					queryable="true" infoformat="application/vnd.ogc.gml"
                    featurecount="20" searchable="true"
					style="culture_images_cinema" 
					url="https://ows.region-bretagne.fr/geoserver/rb/wms" 
					attribution="Région Bretagne" 
					filter="discipline IN ('Cinéma - Audiovisuel')"
					metadata-csw=""
					metadata="" >  
					<template url="https://kartenn.region-bretagne.fr/kartoviz/apps/region/bretagne_bzh/templates/soutien_culture_cinema.mst" />
            </layer>
            <layer id="aide_images_industrie_creation" name="Soutiens dédiés aux radios et musiques enregistrées" visible="true" tiled="false" namespace="rb"
					queryable="true" infoformat="application/vnd.ogc.gml"
                    featurecount="20" searchable="true"
					style="culture_images_radio" 
					url="https://ows.region-bretagne.fr/geoserver/rb/wms" 
					attribution="Région Bretagne" 
					filter="discipline IN ('Musique','Radio')"
					metadata-csw=""
					metadata="" >  
					<template url="https://kartenn.region-bretagne.fr/kartoviz/apps/region/bretagne_bzh/templates/soutien_culture_audio.mst" />
            </layer>
            <layer id="aide_images_industrie_creation" name="Soutiens dédiés au livre et à la lecture" visible="true" tiled="false" namespace="rb"
					queryable="true" infoformat="application/vnd.ogc.gml"
                    featurecount="20" searchable="true"
					style="culture_images_livre" 
					url="https://ows.region-bretagne.fr/geoserver/rb/wms" 
					attribution="Région Bretagne" 
					filter="discipline = 'Livres et lecture'"
					metadata-csw=""
					metadata="" >  
					<template url="https://kartenn.region-bretagne.fr/kartoviz/apps/region/bretagne_bzh/templates/soutien_culture_livre.mst" />
            </layer>

			<layer id="epci" name="Intercommunalité" visible="true" queryable="false" 
				fields="nom_geo" aliases="Nom" toplayer="true"
				type="customlayer" style="" opacity="1" legendurl="https://kartenn.region-bretagne.fr/kartoviz/apps/region/territoire/img/epci.png" 
				url="https://kartenn.region-bretagne.fr/kartoviz/apps/region/territoire/customlayers/epci.js" 
				tooltip="true" tooltipenabled="true"
