    <olscompletion url="https://api-adresse.data.gouv.fr/search/" type="ban" attribution="La recherche d'adresse est un service proposé par l'API adresse.data.gouv.fr"/>
    <elasticsearch url="https://ows.region-bretagne.fr/kartenn/_search" geometryfield="geometry" linkid="search_id" querymode="match" version="current" />
    <searchparameters bbox="false" localities="true" features="true"/>

<!--Filtre pas possible sur plusieurs instances d'une même couche -->
    <themes mini="true" legendmini="false">
        <theme name="Culture"  collapsed="true" id="culture">
            <layer id="aide_spectacle_vivant_art_plastique" name="Soutiens dédiés à l’art contemporain et aux métiers d'arts" visible="true" tiled="false" namespace="rb"
					queryable="true" infoformat="application/vnd.ogc.gml"
                    featurecount="20" searchable="true" 
					style="culture_spectacle_art_contemporain" 
					url="https://ows.region-bretagne.fr/geoserver/rb/wms" 
					attribution="Région Bretagne" 
					filter="discipline IN ('Arts plastiques et visuels','Métiers d''art')"
					metadata-csw=""
					metadata="" >  
					<template url="https://kartenn.region-bretagne.fr/kartoviz/apps/region/bretagne_bzh/templates/soutien_culture_art_contemporain.mst" />
            </layer>
            <layer id="aide_spectacle_vivant_art_plastique" name="Soutiens dédiés au spectacle vivant" visible="true" tiled="false" namespace="rb"
					queryable="true" infoformat="application/vnd.ogc.gml"
                    featurecount="20" searchable="true"
					style="culture_spectacle_art_vivant" 
					url="https://ows.region-bretagne.fr/geoserver/rb/wms" 
					attribution="Région Bretagne" 
					filter="discipline IN ('Théâtre','Musique','Pluridisciplinaire','Danse')"
					metadata-csw=""
					metadata="" >  
