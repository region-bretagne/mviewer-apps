</style>


<script>
	var indicateur_b = {};
	indicateur_b.getData = function () {
		var code_geo = $("#RadarChartEcoB").attr("data-codegeo");
		var data = {chart_eco_b: {labels:["Indicateur 1","Indicateur 2","Indicateur 3"], data: {datasets:[[parseFloat($("#RadarChartEcoB").attr("data-b1")),parseFloat($("#RadarChartEcoB").attr("data-b2")),parseFloat($("#RadarChartEcoB").attr("data-b3"))]]}}};
		console.log(data);
		//drawChart(data);	

		$.getJSON( "../ws/index_dd/data_eco_template.php", function(data2) {
	                    console.log(data2);
	                    indicateur_b.drawChart(data, data2);	       
	    });
	};	 	

	indicateur_b.drawChart = function (data, data2) {
	var ctx = document.getElementById("RadarChartEcoB");
    var RadarChartEcoB = new Chart(ctx, {
          type: 'radar',
          data: {
              labels: data.chart_eco_b.labels,
              datasets: [{
                  label: "Moyenne des territoires",
                  backgroundColor: "rgba(45, 64, 89, 0)",
                  borderColor: "rgba(45, 64, 89, 1)",
                  pointBackgroundColor: "rgba(45, 64, 89, 1)",
                  pointBorderColor: "rgba(45, 64, 89, 1)",
                  pointHoverBackgroundColor: "#fff",
                  pointHoverBorderColor: "rgba(45, 90, 89, 1)",
                  data: data2.data_avg_b
              },
              {                  
                  label: "EPCI",
                  backgroundColor: "rgba(255, 201, 57, 0.7)",
                  borderColor: "rgba(255, 201, 57, 1)",
                  pointBackgroundColor: "rgba(255, 201, 57, 1)",
                  pointBorderColor: "rgba(255, 201, 57, 1)",
                  pointHoverBackgroundColor: "#fff",
                  pointHoverBorderColor: "rgba(255, 201, 57, 1)",
                  data: data.chart_eco_b.data.datasets[0]
              }]
          },
          options: {
          	layout:{
          		padding:{
          			bottom:10
          		}
          	},
            scale: {
                ticks: {
                    beginAtZero: true,
                    max:1,
                    stepSize:0.2
                },
                pointLabels:{
                	fontSize:10
                }
            },
            responsive: true,
          	tooltips: {
              callbacks: {
                  label: function(tooltipItem, data) {
                      return data.datasets[tooltipItem.datasetIndex].label +': ' + parseFloat(tooltipItem.yLabel.toFixed(2)).toLocaleString();
                  }
              }
          	}
          }
      });
    };  

    if  (typeof Chart === 'function') {
			indicateur_b.getData();
	} else {
			$.get('https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js', function() {
				indicateur_b.getData();
    		
			}); 
	}


</script>

