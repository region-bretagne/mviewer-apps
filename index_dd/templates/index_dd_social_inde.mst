{{#features}}
	<li class="item" style="">
		<!-- SelectFeature-->
		<div class="select-feature"
			<h3><span class="glyphicon glyphicon-map-marker" aria-hidden="true"><span class="TitleFeature"> {{nom_geo}}</span></h3>
		</div>	
		<!-- ./SelectFeature-->

		<!-- Categorie-->
        <div id="idCategory">
          <div class="panel panel-default">
            <div class="panel-body">
             <div class="col-md-12 col-lg-12">
                <div class="category-dim">         
                    <h4 class="Title"><B>Comment se positionne le territoire ?</B></h4>
                    <div class="row" style="margin-bottom:10.5px;">
	                    <div class="col-md-3 iconCat">
	                    	<img src="apps/region/index_dd/img/social_cat_{{categorie_g}}.svg">
	                    </div>
	                    <div class="col-md-9">
	                    	<h4 class="NameCatSoci" id="name-cat-{{categorie_g}}"></h4>
	                    	<p class="SubTextJustify" id="cat-{{categorie_g}}"></p>
	                    </div>   
	                </div>                     
                </div>
            </div>
            </div>
          </div>
        </div>
        <!-- ./Categorie-->

        <!-- ChartRadar-->
        <div id="idChart">
          <div class="panel panel-default">
            <div class="panel-body">
              <h4 class="Title"><b>Quelle est la répartition des indicateurs ?</b></h4>
              <canvas class="chart" id="RadarChartSociE" data-codegeo="{{code_geo}}" data-e1="{{e1_ind}}" data-e2="{{e2_ind}}" data-e3="{{e3_ind}}" data-e4="{{e4_ind}}" data-e5="{{e5_ind}}" width="220" height="188"></canvas> 
              <p class="ChartLabel">
              	Indicateur 1: Niveau des inégalités (écart inter-déciles) - 1er et 9e décile </br>Indicateur 2: Taux de pauvreté </br>Indicateur 3: Revenu médian par unité de consommation </br>Indicateur 4: Part des jeunes (15-24ans) ni en emploi ni en formation </br>Indicateur 5: Part de familles monoparentales
              </p> 
              <!--<p class="SubText">
              	Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.Lorem ipsum dolor sit amet, consectetur adipiscing elit.-->
              </p>            
            </div>
          </div>
        </div> 
        <!-- /.ChartRadar--> 

	</li>
{{/features}}

<style>
	.panel-body{
		padding:10px;
	}
	.panel-default{
		border-radius: 2px;
    	box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.1);
    	border: 1px solid #eee!important;
	}
	.select-feature{
		color: #2D4059;
		font-size:18px;
		margin-bottom: 10px;
    	margin-top: 10px;
    	text-align:center;
	}
	.TitleFeature {
		color: #2D4059;
		font-family:"roboto_bold";
		font-size:20px;
		margin-bottom:1%;
		line-height:1;
		text-transform:uppercase;
	}
	.Title{
	  text-align: center;
	  font-size: 18px;
	  margin-top: 10.5px;
      margin-bottom: 10.5px;
      color: #2D4059;
      font-family: Roboto,"Helvetica Neue",Helvetica,Arial,sans-serif;
      font-weight: 400;
      line-height: 1.1;
	}
	.ChartLabel{
	  text-align: left;
	  font-size: 12px;
      color: #555;
	}
	.SubText{
	  text-align: center;
	  font-size: 13px;
      color: #555;
	}
	.SubTextJustify{
	  text-align: justify;
	  font-size: 13px;
      color: #555;
	}
	.iconCat{
		padding:0px;
	}
	.NameCatSoci{
		color:#3DB39E;
		font-family: Roboto,"Helvetica Neue",Helvetica,Arial,sans-serif;
      	font-weight: 500;
      	margin: 5px 0px 2px 0px;
	}
	#name-cat-A:after{
		content:"Lorem Ipsum";
	}
	#name-cat-B:after{
		content:"Lorem Ipsum";
	}
	#name-cat-C:after{
		content:"Lorem Ipsum";
	}
	#cat-A:after{
		content:"Pour cette sous-dimension, l'entité se situe au dessus du 3ème quartile (Q3)";
	}
	#cat-B:after{
		content:"Pour cette sous-dimension, l'entité se situe entre le premier et le troisième quartile (Q1 et Q3)";
	}
	#cat-C:after{
		content:"Pour cette sous-dimension, l'entité se situe en dessous du 1er quartile (Q1)";
	}
	.chart{
		margin-bottom:15px;
	}
