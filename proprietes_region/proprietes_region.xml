    <olscompletion url="https://api-adresse.data.gouv.fr/search/" type="ban" attribution="La recherche d'adresse est un service proposé par l'API adresse.data.gouv.fr"/>
    <elasticsearch url="https://ows.region-bretagne.fr/kartenn/_search" geometryfield="geometry" linkid="search_id" querymode="fussy_like_this" />
    <searchparameters bbox="false" localities="true" features="false"/>

    <themes>
        <theme name="Propriétés de la Région"  collapsed="false" id="propriete">
             
           <layer id="site_lycee_region" name="Sites régions"  visible="false" tiled="false" 
                infoformat="application/vnd.ogc.gml" featurecount="1" queryable="true"
                url="https://ows.region-bretagne.fr/geoserver/rb/wms"
                attribution="Source: Région Bretagne" 
                metadata=""
                metadata-csw="" >	   
                <template url="https://kartenn.region-bretagne.fr/kartoviz/apps/region/site_region/templates/site_region.mst"></template> 
		    </layer> 
			 
            <layer id="parcelles_region" name="Propriétés baties" visible="true" tiled="false" 
					queryable="true"
					infoformat="application/vnd.ogc.gml"
					url="https://ows.region-bretagne.fr/geoserver/interne/wms" 
					attribution="DGFIP" 
					metadata-csw=""
					metadata="" > 
                <template url="https://kartenn.region-bretagne.fr/kartoviz/apps/region/proprietes_region/templates/proprietes_region.mst"></template> 
  					
            </layer>
		</theme>   
